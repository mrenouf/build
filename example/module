cc_library(
  name="foo",
  static=True,
  sources=["foo.c"],
  abi='avr',
  cflags="-I/usr/lib/avr/include -D__AVR_ATmega2560__ -DF_CPU=$(AVR_FREQ)",
  deps=[":bar"]
)

cc_library(
  name="bar",
  static=False,
  sources=["bar.c"],
  abi='avr',
  cflags="-I/usr/lib/avr/include -D__AVR_ATmega2560__ -DF_CPU=$(AVR_FREQ)"
)

cc_binary(
  name="baz",
  sources=["main.c"],
  abi='avr',
  deps=[":foo", ":bar"]
)

